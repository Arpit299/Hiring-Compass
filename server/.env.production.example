# Production profile (copy to .env in production)
NODE_ENV=production
PORT=3001

# Secrets (set strong values in deployment environment)
OPENAI_API_KEY=
SERPAPI_API_KEY=
API_AUTH_TOKEN=change-this-to-a-long-random-secret

# Transport and proxy
ENFORCE_HTTPS=true
TRUST_PROXY=true

# CORS (comma-separated, exact origins only)
CORS_ALLOWED_ORIGINS=https://your-frontend.example.com

# Abuse prevention / resilience
GLOBAL_RATE_LIMIT_MAX=200
ANALYZE_RATE_LIMIT_MAX=30
ANALYZE_TIMEOUT_MS=20000
MAX_RESUME_TEXT_CHARS=50000

# Optional external enrichment
ENABLE_MARKET_PULSE=false
